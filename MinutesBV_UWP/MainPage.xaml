<Page
    x:Class="MinutesBV_UWP.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MinutesBV_UWP"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid Name="MainGrid" Background="#E5E5E5">

            <Image Name="PlayIcon" Source="https://cdn.shopify.com/s/files/1/0227/3833/products/PlaybuttoN_b93489fd-cedf-46d9-92f3-22fdf3725bf0_grande.png" Width="500" HorizontalAlignment="Center" VerticalAlignment="Center" IsTapEnabled="True" Tapped="PlayIcon_Tapped"/>
            <TextBlock x:Name="TextBlock" Text="Start Recording" Height="100" Width="400" TextAlignment="Center" HorizontalAlignment="Center" FontFamily="Comic Sans MS" Foreground="Black" VerticalAlignment="Bottom" FontSize="40"/>

        </Grid>
    </Grid>
</Page>
